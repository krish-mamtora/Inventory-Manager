@{
    ViewData["Title"] = "Product Page";
}
@model SimpleStore.Models.Product 
<div style="border: 1px solid black;">
    <h5>Name : @Model.Name</h5>
    <h5>Pricd : @Model.Price</h5>
    <h5>Quantity : @Model.Quantity</h5>
    <h5>Category : @Model.Category</h5>
    @* <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>  *@
    <a asp-controller = "Home" asp-action = "Edit" 
               asp-routeid = "@Model.Id">Edit</a> 

    <form action="/Product/@Model.Id" method="post">
            <button type="submit" class="btn btn-danger">Delete Product</button>
    </form>
    
</div>